{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
		"baseUrl": ".",
		"paths": {
			"pkg/*": ["pkg/*"]
		}
	},
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules", "dist"]
}
