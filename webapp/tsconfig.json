{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["ES2020", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "pkg", "src/formantWorker.ts"]
}
